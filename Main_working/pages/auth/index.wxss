page {
  display: block;
  min-height: 100%;
  /* background-color: #000000; */
}
.auth-bg{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 0;
}
.logo-wrap{
  text-align: center;
}
.l-header{
  margin: 100rpx auto 100rpx;
  position: relative;
  z-index: 1;
}
.title{
  color: white;
  font-size: 56rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
.logo{
  width: 200rpx;
  height: 200rpx;
}
.weixin{
  position: relative;
  top: 20rpx;
  margin-right: 20rpx;
  width: 64rpx;
  height: 64rpx;
  display: inline-block;
}
.auth-btn{
  margin: 40rpx;
  position: fixed;
  bottom: 300rpx;
  left: 0;
  right: 0;
}

.auth-btn .van-button--primary {
  background-color: #ff7386;
  color: #ffffff;
  border: solid 1px #ff7386;
}

.auth-btn .van-button--default {
  margin-top: 20px;
}

.auth-footer{
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
}
